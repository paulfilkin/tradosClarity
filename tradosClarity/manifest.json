{
  "manifest_version": 3,
  "name": "tradosClarity",
  "version": "1.1.0",
  "description": "Enhances accessibility of Trados Cloud for screen readers and keyboard navigation",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.trados.com/*",
    "*://trados.com/*",
    "*://localhost:*/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://*.trados.com/*",
        "*://trados.com/*", 
        "*://localhost:*/*"
      ],
      "js": ["content.js"],
      "css": ["accessibility.css"],
      "run_at": "document_end"
    }
  ],
  
  "options_page": "settings.html",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "tradosClarity Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
